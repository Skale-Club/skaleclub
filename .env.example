# Database Configuration
# PostgreSQL connection string - required
DATABASE_URL=postgresql://user:password@host:port/database

# Session Configuration
# Secret key for session encryption - generate a strong random string
SESSION_SECRET=your-secret-session-key
SESSION_TTL_DAYS=7

# Admin Account
# Email for admin login
ADMIN_EMAIL=admin@example.com

# Admin password hash - use bcrypt to hash your password
# Generate with: node -e "const bcrypt = require('bcrypt'); bcrypt.hash('your-password', 10, (err, hash) => console.log(hash));"
ADMIN_PASSWORD_HASH=$2b$10$example_hash

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=uploads

# Optional Integrations
# GoHighLevel CRM Integration (optional)
# GHL_API_KEY=your-gohighlevel-api-key
# GHL_LOCATION_ID=your-location-id
GHL_CALENDAR_ID=your-calendar-id

# Twilio SMS Integration (optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number
# TWILIO_HOT_LEAD_RECIPIENTS=+1234567890,+0987654321

# OpenAI API (optional - for AI features)
# OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Build/Deploy Configuration
NODE_ENV=development
APP_TIMEZONE=America/New_York
PORT=5000

# Client Configuration
VITE_MAX_FILE_SIZE_BYTES=1048576
